{
  "compilerOptions": {
    "target": "es2016",
     "lib": [ "ES6" ],                           
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "module": "commonjs",                        
    "baseUrl": "./",                             
    "paths": {},                                 
    "rootDirs": ["src", "test"],                 
    "outDir": "dist",                            
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                              
    "skipLibCheck": true                         
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
